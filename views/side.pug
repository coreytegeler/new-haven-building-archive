		section#filter
			ul.group.filters.nested
				if models
					each model, name in models
						if(name != 'buildings' && name != 'glossary')
							li(class='name')
								.title(data-slug=name)= uppercase(name)
								ul(class=name)
									for item in model
										li(class=item.type)
											a.filter(href='/?'+item.type+'='+item.slug, data-slug=item.slug, data-id=item.id, data-type=item.type) #{item.name}

				li(class='eras')
					.title(data-slug='eras')= 'Eras'
					ul(class='eras')
						for era in eras
							li(class='era')
								a.filter(href='/?era='+era, data-slug=era, data-type='era') #{era.name}
