include  ./mixins
if(tour)
	script(type='text/javascript').
		buildingsInTour = []
	h1= tour.name
	.group.brief= tour.brief
	.group.mapGroup
		.mapWrap.show
			.map
			.loader
	ul.buildings.group
		-var i = 0
		for building in buildings
			script(type='text/javascript').
				buildingsInTour[!{JSON.stringify(i)}] = !{JSON.stringify(building)}
			-i++
			li.building(data-slug=building.slug, data-id=building.id)
				a(href='/building/'+building.slug)
					.index
						.circle= i
					.image
						+thumb(building)
					.meta
						.name= building.name
						.address= building.address
						.style= building.style
						.era= building.era
						.researchBy= 'Contributed by ' + building.researchBy